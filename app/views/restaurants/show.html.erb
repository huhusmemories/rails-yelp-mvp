<div class="container">
  <h1><%= @restaurant.name %></h1>
  <p>
    This restaurant is located at: <%= @restaurant.address %> and it is a <%= @restaurant.category %> restaurant
  </p>
  <p><% @restaurant.reviews.each do |review|%></p>
  <%= review.content %>
  <p>Rating: <%= review.rating %></p>
  <% end %>
  <%= link_to "Back", restaurants_path, class: 'btn btn-primary'%>
  <%= link_to "Create a Review", new_restaurant_review_path(@restaurant), class: 'btn btn-primary'%>
  <%# reviews is an array, iterate through it%>
</div>
